{# templates/admin/users/edit.html.twig #}
{% extends 'Template.html.twig' %}

{% block title %}Éditer {{ user.prenom }} {{ user.nom }} - Mon Application{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Accueil</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin_users_index') }}">Utilisateurs</a></li>
    <li class="breadcrumb-item active">Éditer {{ user.prenom }} {{ user.nom }}</li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Éditer l'utilisateur</h3>
            <div class="card-tools">
                <a href="{{ path('admin_users_index') }}" class="btn btn-sm btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control' ~ (form.prenom.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.errors|length ? ' is-invalid' : '')}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.styleArtistique, 'Style Artistique', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.styleArtistique, {'attr': {'class': 'form-control' ~ (form.styleArtistique.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.styleArtistique) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="roles-checkbox-group">
                            {% for role in form.roles %}
                                <div class="form-check">
                                    {{ form_widget(role, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(role, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.roles) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.biographie, 'Biographie', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.biographie, {'attr': {'class': 'form-control' ~ (form.biographie.vars.errors|length ? ' is-invalid' : ''), 'rows': 4}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.biographie) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.isVerified, 'Compte vérifié', {'label_attr': {'class': 'form-label d-block'}}) }}
                        <div class="form-check form-switch">
                            {{ form_widget(form.isVerified, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="{{ form.isVerified.vars.id }}">
                                {{ form.isVerified.vars.data ? 'Oui' : 'Non' }}
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.isActive, 'Compte actif', {'label_attr': {'class': 'form-label d-block'}}) }}
                        <div class="form-check form-switch">
                            {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="{{ form.isActive.vars.id }}">
                                {{ form.isActive.vars.data ? 'Oui' : 'Non' }}
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Enregistrer les modifications
                </button>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-6">
                    <small class="text-muted">
                        <i class="bi bi-calendar-plus"></i> Créé le {{ user.createdAt|date('d/m/Y à H:i') }}
                    </small>
                </div>
                <div class="col-md-6 text-end">
                    <form action="{{ path('admin_users_toggle_active', {'id': user.id}) }}" method="post" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle-active' ~ user.id) }}">
                        <button type="submit" class="btn btn-sm {{ user.isActive ? 'btn-warning' : 'btn-success' }}">
                            <i class="bi bi-power"></i> {{ user.isActive ? 'Désactiver' : 'Activer' }}
                        </button>
                    </form>
                    <form method="post" action="{{ path('admin_users_delete', {'id': user.id}) }}" class="d-inline ms-2" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mise à jour des labels des switches
            const verifiedSwitch = document.getElementById('{{ form.isVerified.vars.id }}');
            const activeSwitch = document.getElementById('{{ form.isActive.vars.id }}');

            function updateSwitchLabel(switchElement) {
                const label = switchElement.closest('.form-check').querySelector('.form-check-label');
                label.textContent = switchElement.checked ? 'Oui' : 'Non';
            }

            if (verifiedSwitch) {
                updateSwitchLabel(verifiedSwitch);
                verifiedSwitch.addEventListener('change', function() {
                    updateSwitchLabel(this);
                });
            }

            if (activeSwitch) {
                updateSwitchLabel(activeSwitch);
                activeSwitch.addEventListener('change', function() {
                    updateSwitchLabel(this);
                });
            }

            // Validation du formulaire
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Confirmation pour la suppression
            const deleteForms = document.querySelectorAll('form[onsubmit*="confirm"]');
            deleteForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ? Cette action est irréversible.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>

    <style>
        .roles-checkbox-group {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1rem;
            background-color: #f8f9fa;
        }
        .roles-checkbox-group .form-check {
            margin-bottom: 0.5rem;
        }
        .roles-checkbox-group .form-check:last-child {
            margin-bottom: 0;
        }
    </style>
{% endblock %}
