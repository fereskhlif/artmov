{% extends 'Template.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block content %}
    <div class="container-fluid">
        <h1 class="my-4">Gestion des Utilisateurs</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Liste des utilisateurs</h5>
                <a href="{{ path('admin_users_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvel utilisateur
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Vérifié</th>
                            <th>Actif</th>
                            <th>Créé le</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.fullName }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        <span class="badge bg-secondary">{{ role }}</span>
                                    {% endfor %}
                                </td>
                                <td>
                                    {% if user.isVerified %}
                                        <span class="badge bg-success">Oui</span>
                                    {% else %}
                                        <span class="badge bg-warning">Non</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if user.isActive %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-danger">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>{{ user.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('admin_users_show', {'id': user.id}) }}" class="btn btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('admin_users_toggle_active', {'id': user.id}) }}" class="d-inline">
                                            <button type="submit" class="btn btn-{{ user.isActive ? 'warning' : 'success' }}">
                                                <i class="fas fa-{{ user.isActive ? 'ban' : 'check' }}"></i>
                                            </button>
                                        </form>
                                        <form method="post" action="{{ path('admin_users_delete', {'id': user.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Aucun utilisateur trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
