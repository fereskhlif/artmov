{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier la catégorie : {{ categorie.nom }}</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.nom, {
                'attr': {'class': 'form-control'},
                'label_attr': {'class': 'form-label'}
            }) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.description, {
                'attr': {'class': 'form-control', 'rows': 4},
                'label_attr': {'class': 'form-label'}
            }) }}
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">Enregistrer les modifications</button>
            <a class="btn btn-secondary" href="{{ path('app_categories') }}">Retour à la liste</a>
            <a class="btn btn-info" href="{{ path('app_categories_show', {'id': categorie.id}) }}">Voir les détails</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}