{% extends 'Template.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">Edit Event</h1>

        <!-- Event Edit Form -->
        {{ form_start(form, {'attr': {'class': 'event-form'}}) }}
        
        <!-- Event Title -->
        <div class="form-group">
            {{ form_label(form.titre) }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.titre) }}
        </div>

        <!-- Event Price -->
        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix) }}
        </div>

        <!-- Event Location -->
        <div class="form-group">
            {{ form_label(form.lieu) }}
            {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.lieu) }}
        </div>

        <!-- Event Image -->
        <div class="form-group">
            {{ form_label(form.image, 'Event Image') }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
            {{ form_errors(form.image) }}
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">
                {{ button_label|default('Update') }}
            </button>
        </div>

        {{ form_end(form) }}

        <!-- Back to List Button -->
        <div class="mt-3 text-center">
            <a href="{{ path('app_event_index') }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>

        <!-- Delete Form -->
        <div class="mt-3 text-center">
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
