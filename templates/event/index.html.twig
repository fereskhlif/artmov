{% extends 'Template.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <h1 class="mb-4">Event Management</h1>

        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('app_event_index') }}" class="row g-3">
                    <div class="col-md-4">
                        <input type="text" name="search" class="form-control" placeholder="Search events..."
                               value="{{ currentFilters.search is defined ? currentFilters.search : '' }}">
                    </div>
                    <div class="col-md-2">
                        <input type="number" name="min_price" class="form-control" placeholder="Min price"
                               value="{{ currentFilters.min_price is defined ? currentFilters.min_price : '' }}">
                    </div>
                    <div class="col-md-2">
                        <input type="number" name="max_price" class="form-control" placeholder="Max price"
                               value="{{ currentFilters.max_price is defined ? currentFilters.max_price : '' }}">
                    </div>
                    <div class="col-md-2">
                        <select name="sort_by" class="form-select">
                            <option value="">Sort by</option>
                            <option value="price_asc" {{ currentFilters.sort_by is defined and currentFilters.sort_by == 'price_asc' ? 'selected' : '' }}>
                                Price: Low to High
                            </option>
                            <option value="price_desc" {{ currentFilters.sort_by is defined and currentFilters.sort_by == 'price_desc' ? 'selected' : '' }}>
                                Price: High to Low
                            </option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Filter
                        </button>
                    </div>
                </form>

                {% if currentFilters is not empty %}
                    <div class="mt-3">
                        <a href="{{ path('app_event_index') }}" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times"></i> Clear filters
                        </a>
                        <a href="{{ path('app_event_revenue') }}" class="btn btn-sm btn-outline-success ms-2">
                            <i class="fas fa-chart-line"></i> View Revenue
                        </a>
                        <small class="text-muted ms-2">
                            {{ events.getTotalItemCount }} event(s) found
                        </small>
                    </div>
                {% else %}
                    <div class="mt-3">
                        <a href="{{ path('app_event_revenue') }}" class="btn btn-sm btn-outline-success">
                            <i class="fas fa-chart-line"></i> View Revenue
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Create New Event Button -->
        <a href="{{ path('app_event_new') }}" class="btn btn-success mb-3">
            <i class="fas fa-plus-circle"></i> Create New Event
        </a>

        <!-- Events Table -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Prix (TND)</th>
                        <th>Lieu</th>
                        <th>Tickets Sold</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                        <tr>
                            <td>{{ event.id }}</td>
                            <td>{{ event.titre }}</td>
                            <td>{{ event.prix }}</td>
                            <td>{{ event.lieu }}</td>
                            <td>
                                {% set ticketCount = event.tickets|length %}
                                <span class="badge {% if ticketCount > 0 %}bg-success{% else %}bg-secondary{% endif %}">
                                    {{ ticketCount }} tickets
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm mx-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="{{ path('app_event_tickets', {'eventId': event.id}) }}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-ticket-alt"></i>
                                </a>
                                <form action="{{ path('app_event_delete', {'id': event.id}) }}" method="post" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event?');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No events found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if events.getTotalItemCount > 0 %}
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(events) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
