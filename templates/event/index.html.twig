{% extends 'Template.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <h1 class="mb-4">Event Index</h1>

        <!-- Create New Event Button -->
        <a href="{{ path('app_event_new') }}" class="btn btn-success mb-3">
            <i class="fas fa-plus-circle"></i> Create New Event
        </a>

        <!-- Events Table -->
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Prix</th>
                    <th>Lieu</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.titre }}</td>
                        <td>{{ event.prix }} â‚¬</td>
                        <td>{{ event.lieu }}</td>
                        <td>
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Show
                            </a>
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>

                            <!-- View Tickets Button -->
                            <a href="{{ path('app_event_tickets', {'eventId': event.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-ticket-alt"></i> View Tickets
                            </a>

                            <!-- Delete Button (with form) -->
                            <form action="{{ path('app_event_delete', {'id': event.id}) }}" method="post" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event?');">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
