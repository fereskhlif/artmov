{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Events List</h1>

        <!-- Create New Event Button (Optional, for Admin) -->
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_event_new') }}" class="btn btn-success mb-3">
                <i class="fas fa-plus-circle"></i> Create New Event
            </a>
        {% endif %}

        <!-- Event Cards -->
        <div class="row">
            {% for event in events %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Event Image with Inline CSS for Resize -->
                        <img src="{{ event.image ? asset('uploads/events/' ~ event.image) : asset('images/default-event.jpg') }}" 
                             class="card-img-top" 
                             alt="{{ event.titre }}"
                             style="width: 100%; height: 200px; object-fit: cover;">

                        <div class="card-body">
                            <h5 class="card-title">{{ event.titre }}</h5>
                            <p class="card-text">
                                <strong>Price:</strong> {{ event.prix }} TND
                                <br>
                                <strong>Location:</strong> {{ event.lieu }}
                            </p>
                        </div>

                        <div class="card-footer text-center">
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Show
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm mx-2">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <p>No events found</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
