{% extends 'Template.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <h1 class="mb-4">Events Revenue Report</h1>

        <div class="mb-3">
            <a href="{{ path('app_event_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Events
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Event Title</th>
                        <th>Tickets Sold</th>
                        <th>Total Revenue (TND)</th>
                        <th>Average Price per Ticket</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                        {% set totalRevenue = event[0].tickets|reduce((sum, ticket) => sum + ticket.prixtot, 0) %}
                        {% set ticketCount = event[0].tickets|length %}
                        {% set avgPrice = ticketCount > 0 ? totalRevenue / ticketCount : 0 %}
                        <tr>
                            <td>{{ event[0].titre }}</td>
                            <td>
                                <span class="badge bg-info">{{ ticketCount }}</span>
                            </td>
                            <td>
                                <span class="badge bg-success">{{ totalRevenue|number_format(2) }}</span>
                            </td>
                            <td>
                                <span class="badge bg-warning">{{ avgPrice|number_format(2) }}</span>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No revenue data available</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if events.getTotalItemCount > 0 %}
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(events) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
