{% extends 'base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">{{ event.titre }}</h1>

        <!-- Event Details Container with Flexbox Layout -->
        <div class="d-flex align-items-center mb-4">
            <!-- Event Image with Inline CSS for resizing -->
            <img src="{{ event.image ? asset('uploads/events/' ~ event.image) : asset('images/default-event.jpg') }}" 
                 alt="{{ event.titre }}"
                 style="width: 250px; height: 250px; object-fit: cover; border-radius: 10px; margin-right: 30px;">

            <!-- Event Details on the Right -->
            <div>
                <!-- Event Information -->
                <h5 class="card-title">Event Information</h5>
                <p><strong>Price:</strong> {{ event.prix }} â‚¬</p>
                <p><strong>Location:</strong> {{ event.lieu }}</p>

                <!-- Reserve Button -->
                <div class="mt-3">
                   <a href="{{ path('app_ticket_new', {'eventId': event.id}) }}" class="btn btn-success btn-lg">
                    <i class="fas fa-calendar-check"></i> Reserve
                </a>
                </div>
            </div>
        </div>

        <!-- Back to List Button -->
        <div class="text-center">
            <a href="{{ path('app_event_index') }}" class="btn btn-secondary btn-sm" style="font-size: 16px; padding: 8px 16px; border-radius: 5px;">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
{% endblock %}
