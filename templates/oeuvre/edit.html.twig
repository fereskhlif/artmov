{% extends 'Template.html.twig' %}

{% block title %}Modifier l'œuvre{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Modifier l'œuvre : {{ oeuvre.titre }}</h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.titre, {
                    'attr': {'class': 'form-control'},
                    'label_attr': {'class': 'form-label'}
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.prix, {
                    'attr': {'class': 'form-control', 'step': '0.01'},
                    'label_attr': {'class': 'form-label'}
                }) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_row(form.description, {
                'attr': {'class': 'form-control', 'rows': 4},
                'label_attr': {'class': 'form-label'}
            }) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.image, {
                'attr': {'class': 'form-control'},
                'label_attr': {'class': 'form-label'},
                'help': 'URL de l\'image'
            }) }}
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">Enregistrer les modifications</button>
            <a class="btn btn-secondary" href="{{ path('app_oeuvres') }}">Retour à la liste</a>
            <a class="btn btn-info" href="{{ path('app_oeuvres_show', {'id': oeuvre.id}) }}">Voir les détails</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}