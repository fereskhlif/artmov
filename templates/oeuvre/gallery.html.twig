{% extends 'base.html.twig' %}

{% block title %}Galerie des Œuvres - ArtMove{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Galerie d'Œuvres <span class="d-block">Artistiques</span></h1>
                    <p class="mb-4">Découvrez notre collection exclusive d'œuvres d'art uniques. Chaque pièce est soigneusement sélectionnée pour vous inspirer et embellir votre espace.</p>
                    <p><a href="#featured-works" class="btn btn-secondary me-2">Explorer</a></p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="{{ asset('images/art-gallery-hero.jpg') }}" class="img-fluid" alt="Galerie d'art">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Works Section -->
<section id="featured-works" class="product-section">
    <div class="container">
        <div class="row">
            <!-- Filters Sidebar -->
            <div class="col-md-3">
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Filtres</h5>
                    </div>
                    <div class="card-body">
                        <h6>Catégories</h6>
                        <div class="list-group list-group-flush">
                            <a href="{{ path('app_oeuvres_gallery') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                Toutes les œuvres
                                <span class="badge bg-primary rounded-pill">{{ total_oeuvres }}</span>
                            </a>
                            {% for categorie in categories %}
                            <a href="{{ path('app_oeuvres_by_category', {'id': categorie.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                {{ categorie.nom }}
                                <span class="badge bg-success rounded-pill">{{ categorie.oeuvres|length }}</span>
                            </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Works Grid -->
            <div class="col-md-9">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="section-title">Nos Œuvres d'Art</h2>
                        <p class="text-muted">{{ oeuvres|length }} œuvre(s) trouvée(s)</p>
                    </div>
                </div>

                <div class="row">
                    {% for oeuvre in oeuvres %}
                    <div class="col-12 col-sm-6 col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            {% if oeuvre.image %}
                            <img src="{{ oeuvre.image }}" class="card-img-top" alt="{{ oeuvre.titre }}" style="height: 200px; object-fit: cover;">
                            {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                            {% endif %}
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ oeuvre.titre }}</h5>
                                <p class="card-text flex-grow-1">{{ oeuvre.description|length > 100 ? oeuvre.description|slice(0, 100) ~ '...' : oeuvre.description }}</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="h5 text-success mb-0">{{ oeuvre.prix }} DT</span>
                                        {% if oeuvre.categorie %}
                                        <span class="badge bg-success">{{ oeuvre.categorie.nom }}</span>
                                        {% endif %}
                                    </div>
                                    <div class="d-grid gap-2">
                                        <a href="{{ path('app_oeuvres_show', {'id': oeuvre.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Voir détails
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="fas fa-palette fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Aucune œuvre disponible</h4>
                            <p class="text-muted">Revenez bientôt pour découvrir nos nouvelles créations.</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.hero {
    background: linear-gradient(135deg, #0F632C 0%, #28a745 100%);
    padding: 100px 0;
    color: white;
}
.hero h1 {
    font-size: 3rem;
    font-weight: 700;
}
.product-section {
    padding: 80px 0;
}
.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: none;
}
.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}
.section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #0F632C;
    margin-bottom: 1rem;
}
.list-group-item.active {
    background-color: #0F632C;
    border-color: #0F632C;
}
</style>
{% endblock %}