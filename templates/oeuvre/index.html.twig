{% extends 'Template.html.twig' %}

{% block title %}Liste des œuvres{% endblock %}

{% block content %}
<div class="container mt-4">
  <h1>Liste des œuvres</h1>

  <div class="d-flex gap-2 mb-3">
    <a class="btn btn-primary" href="{{ path('app_oeuvres_new') }}">
      <i class="fas fa-plus"></i> Ajouter une œuvre
    </a>
    <a class="btn btn-success" href="{{ path('app_categories_new') }}">
      <i class="fas fa-tags"></i> Ajouter une catégorie
    </a>
    <a class="btn btn-outline-secondary" href="{{ path('app_categories') }}">
      <i class="fas fa-list"></i> Gérer les catégories
    </a>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Titre</th>
        <th>Description</th>
        <th>Prix</th>
        <th>Catégorie</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for oeuvre in oeuvres %}
      <tr>
        <td>{{ oeuvre.id }}</td>
        <td>{{ oeuvre.titre }}</td>
        <td>{{ oeuvre.description|length > 50 ? oeuvre.description|slice(0, 50) ~ '...' : oeuvre.description }}</td>
        <td>{{ oeuvre.prix }} DT</td>
        <td>
          {% if oeuvre.categorie %}
            <span class="badge bg-primary">{{ oeuvre.categorie.nom }}</span>
          {% else %}
            <span class="text-muted">Aucune catégorie</span>
          {% endif %}
        </td>
        <td>
          {% if oeuvre.image %}
            <img src="{{ oeuvre.image }}" alt="{{ oeuvre.titre }}" style="max-width: 50px; max-height: 50px;">
          {% else %}
            <span class="text-muted">Aucune image</span>
          {% endif %}
        </td>
        <td>
          <a class="btn btn-sm btn-info" href="{{ path('app_oeuvres_show', {'id': oeuvre.id}) }}">Voir</a>
          <a class="btn btn-sm btn-warning" href="{{ path('app_oeuvres_edit', {'id': oeuvre.id}) }}">Modifier</a>
          <form method="post" action="{{ path('app_oeuvres_delete', {'id': oeuvre.id}) }}" style="display:inline" onsubmit="return confirm('Voulez-vous vraiment supprimer cette œuvre ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ oeuvre.id) }}">
            <button class="btn btn-sm btn-danger" type="submit">Supprimer</button>
          </form>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="7" class="text-center">Aucune œuvre trouvée.</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}