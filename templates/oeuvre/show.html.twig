{% extends 'Template.html.twig' %}

{% block title %}Détails de l'œuvre{% endblock %}

{% block content %}
<div class="container mt-4">
  <h1>Détails de l'œuvre : {{ oeuvre.titre }}</h1>

  <div class="row">
    <div class="col-md-8">
      <ul class="list-group mb-3">
        <li class="list-group-item">
          <strong>ID:</strong> #{{ oeuvre.id }}
        </li>
        <li class="list-group-item">
          <strong>Titre:</strong> {{ oeuvre.titre }}
        </li>
        <li class="list-group-item">
          <strong>Description:</strong> 
          <p class="mb-0 mt-2">{{ oeuvre.description }}</p>
        </li>
        <li class="list-group-item">
          <strong>Prix:</strong> {{ oeuvre.prix }} DT
        </li>
      </ul>
    </div>
    
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Image</h5>
          {% if oeuvre.image %}
            <img src="{{ oeuvre.image }}" alt="{{ oeuvre.titre }}" class="img-fluid rounded">
          {% else %}
            <div class="text-muted text-center py-4">
              <i class="fas fa-image fa-3x mb-2"></i>
              <p>Aucune image disponible</p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex gap-2 mt-4">
    <a class="btn btn-secondary" href="{{ path('app_oeuvres') }}">Retour à la liste</a>
    <a class="btn btn-warning" href="{{ path('app_oeuvres_edit', {'id': oeuvre.id}) }}">Modifier</a>
    <form method="post" action="{{ path('app_oeuvres_delete', {'id': oeuvre.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette œuvre ?');">
      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ oeuvre.id) }}">
      <button class="btn btn-danger" type="submit">Supprimer</button>
    </form>
  </div>
</div>
{% endblock %}