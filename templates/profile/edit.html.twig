{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier mon profil</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.prenom) }}
            </div>
        </div>

        {% if is_granted('ROLE_ARTISTE') %}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.styleArtistique) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_row(form.biographie) }}
                </div>
            </div>
        {% endif %}

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Enregistrer les modifications
            </button>
            <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour au profil
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
