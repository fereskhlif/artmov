{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3>Mon Profil</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Nom :</strong> {{ user.nom }}</p>
                                <p><strong>Prénom :</strong> {{ user.prenom }}</p>
                                <p><strong>Email :</strong> {{ user.email }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Rôles :</strong>
                                    {% for role in user.roles %}
                                        <span class="badge bg-secondary">{{ role }}</span>
                                    {% endfor %}
                                </p>
                                <p><strong>Compte vérifié :</strong>
                                    <span class="badge bg-{{ user.isVerified ? 'success' : 'danger' }}">
                                    {{ user.isVerified ? 'Oui' : 'Non' }}
                                </span>
                                </p>
                            </div>
                        </div>

                        {% if is_granted('ROLE_ARTISTE') %}
                            <hr>
                            <h5>Informations Artiste</h5>
                            <p><strong>Style artistique :</strong> {{ user.styleArtistique ?? 'Non renseigné' }}</p>
                            <p><strong>Biographie :</strong> {{ user.biographie ?? 'Non renseignée' }}</p>
                        {% endif %}

                        <div class="mt-4">
                            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">Modifier le profil</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
