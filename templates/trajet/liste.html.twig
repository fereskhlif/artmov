{% extends 'Template.html.twig' %}

{% block title %}Liste des Trajets{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Home</a></li>
    <li class="breadcrumb-item active">Liste des trajets</li>
{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Liste des trajets</h1>
        <a href="{{ path('app_trajet_add') }}" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Ajouter un trajet
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-primary">
            <tr>
                <th>Date de départ</th>
                <th>Date d'arrivée</th>
                <th>Ville de départ</th>
                <th>Ville d'arrivée</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for i in trajet %}
                <tr>
                    <td>{{ i.dateDep ? i.dateDep|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ i.dateArr ? i.dateArr|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ i.villeDep }}</td>
                    <td>{{ i.villeArr }}</td>
                    <td>
                        <a href="{{ path('app_trajet_add') }}" class="btn btn-sm btn-primary me-1">
                            <i class="bi bi-plus-circle me-1"></i> Ajouter
                        </a>
                        <a href="{{ path('app_trajet_update', { id: i.id }) }}" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square me-1"></i> Modifier
                        </a>
                        <a href="{{ path('app_trajet_delete', { id: i.id }) }}"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Voulez-vous vraiment supprimer ce trajet ?');">
                            <i class="bi bi-trash me-1"></i> Supprimer
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun trajet disponible.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
