{% extends 'Template.html.twig' %}

{% block title %}Mise à jour des trajets{% endblock %}

{% block content %}
    <h1 class="text-center mb-4">Mettre à jour le trajet</h1>

    <div class="container mt-4">
        <div class="card shadow p-4" style="border-radius: 12px;">
            <div class="card-body">

                {{ form_start(trajet, {'attr': {'class': 'row g-4'}}) }}

                {% for child in trajet %}
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                {% endfor %}

                <div class="col-12 text-end mt-3">
                    <button class="btn btn-success btn-lg px-4">
                        Mettre à jour
                    </button>
                </div>

                {{ form_end(trajet) }}

                <div class="mt-3">
                    <a href="{{ path('liste_trajet') }}" class="text-decoration-none">
                        ← Retour à la liste des trajets
                    </a>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
