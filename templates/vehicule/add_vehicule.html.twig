{% extends 'Template.html.twig' %}

{% block title %}Ajouter un Véhicule{% endblock %}
{% block page_title %}Ajouter un Véhicule{% endblock %}
{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Home</a></li>
    <li class="breadcrumb-item active">Ajouter Véhicule</li>
{% endblock %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="border-radius: 12px;">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-car-front-fill me-2"></i>
                        Formulaire d'ajout de véhicule
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(formVehicule, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_label(formVehicule.matricule, "Matricule") }}
                            {{ form_widget(formVehicule.matricule, {
                                attr: {
                                    class: 'form-control ' ~ (formVehicule.matricule.vars.valid ? 'is-valid' : 'is-invalid')
                                }
                            }) }}
                            {{ form_errors(formVehicule.matricule) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_label(formVehicule.type, "Type de véhicule") }}
                            {{ form_widget(formVehicule.type, {
                                attr: {
                                    class: 'form-control ' ~ (formVehicule.type.vars.valid ? 'is-valid' : 'is-invalid')
                                }
                            }) }}
                            {{ form_errors(formVehicule.type) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_label(formVehicule.capacite, "Capacité") }}
                            {{ form_widget(formVehicule.capacite, {
                                attr: { class: 'form-control ' ~ (formVehicule.capacite.vars.valid ? 'is-valid' : 'is-invalid') }
                            }) }}
                            {{ form_errors(formVehicule.capacite) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_label(formVehicule.etat, "État") }}
                            {{ form_widget(formVehicule.etat, {
                                attr: { class: 'form-control ' ~ (formVehicule.etat.vars.valid ? 'is-valid' : 'is-invalid') }
                            }) }}
                            {{ form_errors(formVehicule.etat) }}
                        </div>
                    </div>

                    {{ form_rest(formVehicule) }}

                    <div class="text-end mt-4">
                        <a href="{{ path('liste_vehicule') }}" class="btn btn-secondary me-2">
                            <i class="bi bi-x-circle me-2"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i> Ajouter véhicule
                        </button>
                    </div>

                    {{ form_end(formVehicule) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
