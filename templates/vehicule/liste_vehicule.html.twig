{% extends 'Template.html.twig' %}

{% block title %}Liste des véhicules{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Home</a></li>
    <li class="breadcrumb-item active">Liste des Véhicules</li>

{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Liste des Véhicules</h1>
        <form class="form-inline d-flex" method="get" action="{{ path('app_vehicule_list') }}">
            <input class="form-control mr-sm-2" type="search" name="matricule" placeholder="Search" value="{{ searchTerm|default('') }}">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>



        <a href="{{ path('app_vehicule_add') }}" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Ajouter un véhicule
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-primary">
            <tr>
                <th>Matricule</th>
                <th>Type</th>
                <th>Capacité</th>
                <th>État</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for i in vehicule %}
                <tr>
                    <td>{{ i.matricule }}</td>
                    <td>{{ i.type }}</td>
                    <td>{{ i.capacite }}</td>
                    <td>
                        {% if i.etat == 'Disponible' %}
                            <span class="badge bg-success">{{ i.etat }}</span>
                        {% else %}
                            <span class="badge bg-danger">{{ i.etat }}</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_show_books_by_authors', {'id': i.id}) }}" class="btn btn-sm btn-primary me-1">
                            <i class="bi bi-truck me-1"></i> liste des Trajet
                        </a>
                        <a href="{{ path('trajet_new', {'vehiculeId': i.id}) }}" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-truck me-1"></i> Ajouter Trajet
                        </a>
                        <a href="{{ path('app_vehicule_update', {'id': i.id}) }}" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square me-1"></i> Modifier
                        </a>
                        <a href="{{ path('app_vehicule_delete', {'id': i.id}) }}"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Voulez-vous vraiment supprimer ce véhicule ?');">
                            <i class="bi bi-trash me-1"></i> Supprimer
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun véhicule disponible.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
